[Unit]
Description=WebP Server Go
Documentation=https://github.com/webp-sh/webp_server_go
After=nginx.target

[Service]
Type=simple
StandardError=journal
WorkingDirectory=/var/www/html/webp-server
ExecStart=/var/www/html/webp-server --config /var/www/html/webp-server/config.json
Restart=always
RestartSec=3s

[Install]
WantedBy=multi-user.target
Alias=webp-server.service
